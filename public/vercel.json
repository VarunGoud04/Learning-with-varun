{
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" },
        { "key": "X-Powered-By", "value": "Shutdown-Mode" }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/shutdown.html"
    }
  ]
}
