{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/((?!shutdown\\.html).*)",
      "destination": "/shutdown.html",
      "permanent": true
    }
  ]
}
